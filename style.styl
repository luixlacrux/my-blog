		#cat_name
			color #333333
			border-bottom 1px solid #333333
			font-family "Raleway", "Noto-sans" , arial , sans-serif
			font-size 2rem
			font-weight 500
			margin-bottom 30px
			margin-right 30px
			padding-bottom	 10px

