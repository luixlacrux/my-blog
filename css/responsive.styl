/*Tablets*/

@media screen and (max-width: 1024px)
	.Header
		
		nav 
			ul 
				li 
					margin 0px 5px 10px 0px
					background #bf2222
					padding 10px
					a
						&:hover
							color #fff
	#main 
		#no-slide
			display none
		#articles_list
			#pagination 
				p 
					a 
						margin 10px 20px 
						background #bf2222
						color #fff
						padding 10px
	.Footer 
		#ft_widget
			.widget
				width 50%
	.widget 
		 
		li
			border-bottom 1px solid #333333
			padding 5px 0px

@media screen and (max-width: 768px)
	.Header
		&-logo
			width 100%
			background #333333
			p 
				text-align center
			span
				text-align center
				left 50px
		nav 
			width 100%
			float left
			margin-top 10px
			
			ul
				float left
	#main 
		#articles_list
			width 100%
		
		aside 
			width 100% 
			clear both
	.widget
		margin-bottom 40px
		width 100%

/*Medida smartphones*/
@media screen and (max-width: 500px)

	#main 
		#articles_list 
			article
				.thumb
					width 100%
					float left
					margin-bottom 20px 
	.Footer
		#ft_widget
			.widget
				width 100%










		
	